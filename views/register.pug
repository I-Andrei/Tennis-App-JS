extends layout

block content
    div.text-center
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Register page

            label( for="inputName" class="sr-only") Email address
            input(type="name" id="inputName" class="form-control" placeholder="Name" required autofocus)

            label( for="inputEmail" class="sr-only") Email address
            input(type="email" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus)

            label( for="inputUsername" class="sr-only") Email address
            input(type="username" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus)

            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)

            label(for="inputConfirmPassword" class="sr-only") Confirm Password
            input(type="password" name="confirmpassword" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" required)

            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Register

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) &copy; 2020-2021